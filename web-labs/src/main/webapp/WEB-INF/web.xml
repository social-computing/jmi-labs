<?xml version="1.0" encoding="UTF-8" ?>
<web-app version="2.5"
		xmlns="http://java.sun.com/xml/ns/javaee" 
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Just Map It! - Labs</display-name>

    <!-- Filters configuration section -->
 	<filter>
		<filter-name>HibernateFilter</filter-name>
		<filter-class>com.socialcomputing.labs.utils.HibernateSessionRequestFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HibernateFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
    <!-- Servlets configuration section -->
    <servlet>
        <servlet-name>jersey-servlet</servlet-name> 
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <!-- servlet>
        <servlet-name>spreadsheetAuth-servlet</servlet-name> 
        <servlet-class>com.socialcomputing.labs.spreadsheet.SpreadsheetAuthServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>spreadsheetCallbackAuth-servlet</servlet-name> 
        <servlet-class>com.socialcomputing.labs.spreadsheet.SpreadsheetCallbackAuthServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet-->
    <servlet-mapping>
		<servlet-name>jersey-servlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <!-- servlet-mapping>
		<servlet-name>spreadsheetAuth-servlet</servlet-name>
		<url-pattern>/spreadsheet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>spreadsheetCallbackAuth-servlet</servlet-name>
		<url-pattern>/spreadsheet/*</url-pattern>
    </servlet-mapping-->
    
    <session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<resource-ref>
		<res-ref-name>jdbc/labs-db</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>